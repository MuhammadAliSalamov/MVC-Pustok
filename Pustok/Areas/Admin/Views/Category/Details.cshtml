@using Pustok.Areas.Admin.Models
 @model Pustok.Areas.Admin.Models.Category
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Category: @Model.Name</h6>
            <a asp-action="Index" class="btn btn-sm btn-secondary">Back to List</a>
        </div>
        <div class="card-body">
            <p><strong>Description:</strong> @Model.Description</p>
        </div>
    </div>

    <h3 class="h4 mb-3 text-gray-800">Products in this category (@(Model.Products?.Count ?? 0))</h3>

    <div class="row">
        @if (Model.Products != null && Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <div class="col-xl-3 col-md-6 mb-4">
                    <div class="card border-left-primary shadow h-100 py-2">
                        <img src="~/image/products/@product.ImageUrl" 
                             class="card-img-top mx-auto d-block mt-2" 
                             alt="@product.Name" 
                             style="width: 150px; height: 150px; object-fit: cover; border-radius: 10px;">
                        
                        <div class="card-body">
                            <div class="row no-gutters align-items-center">
                                <div class="col mr-2">
                                    <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                        ID: #@product.Id
                                    </div>
                                    <div class="h5 mb-0 font-weight-bold text-gray-800">@product.Name</div>
                                    <div class="text-gray-600 mt-2" style="font-size: 0.85rem; height: 40px; overflow: hidden;">
                                        @product.Description
                                    </div>
                                    <div class="mt-3 text-success font-weight-bold">
                                        Price: @product.Price.ToString("C")
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-footer bg-white border-0 d-flex justify-content-between">
                            <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-outline-info">View</a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">No products found in this category.</div>
            </div>
        }
    </div>
</div>
            <!-- End of Main Content -->